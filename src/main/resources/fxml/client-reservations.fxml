<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.location.controllers.ClientReservationsController">

    <padding>
        <Insets top="10" bottom="10" left="10" right="10" />
    </padding>

    <!-- Titre -->
    <Label text="Mes Réservations">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <!-- Tableau -->
    <TableView fx:id="reservationTable" prefHeight="400.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="vehicleColumn" prefWidth="200.0" text="Véhicule" />
            <TableColumn fx:id="dateDebutColumn" prefWidth="150.0" text="Date Début" />
            <TableColumn fx:id="dateFinColumn" prefWidth="150.0" text="Date Fin" />
            <TableColumn fx:id="statutColumn" prefWidth="120.0" text="Statut" />
        </columns>
    </TableView>

    <!-- Actions en bas -->
    <HBox alignment="CENTER" spacing="10">

        <Button text="Retour" onAction="#handleBack"
                style="-fx-background-color: #6c757d; -fx-text-fill: white;" />
    </HBox>

    <Label fx:id="errorLabel" text="" visible="false" style="-fx-text-fill: red;" />

</VBox>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.FontWeight?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.location.controllers.InvoiceController"
      spacing="15"
      alignment="CENTER"
      style="-fx-background-color: #f7f7f7; -fx-padding: 30; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-background-radius: 10;">

    <!-- Titre -->
    <Label text="Facture"
           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Ligne séparatrice -->
    <Label style="-fx-background-color: #ccc; -fx-min-height: 1; -fx-max-width: 300;" />

    <!-- Infos client -->
    <Label fx:id="clientLabel"
           style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />
    <Label fx:id="vehiculeLabel"
           style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />
    <Label fx:id="datesLabel"
           style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />
    <Label fx:id="chauffeurLabel"
           style="-fx-font-size: 16px; -fx-text-fill: #34495e;" />

    <!-- Ligne séparatrice -->
    <Label style="-fx-background-color: #ccc; -fx-min-height: 1; -fx-max-width: 300;" />

    <!-- Total -->
    <Label fx:id="coutLabel"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" />

</VBox>
